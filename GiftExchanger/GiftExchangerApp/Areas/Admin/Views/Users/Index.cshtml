@model ICollection<UserDataDTOout>

@{
    ViewData["Title"] = "Users All";
    int i = 0;
}

<h1 class="text-center pt-4"><i class="fas fa-users"></i> All Users</h1>
<p class="text-center font-italic">Here Admin can explore other users and increase their credits!</p>

<center>
    <div class="w-75 pt-4 mt-4 .admin-users">

        <table class="table table-striped" id="dataTableJS">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Username</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">Gifts Sent</th>
                    <th scope="col">Gifts Recieved</th>
                    <th scope="col">Credit Balance</th>
                    <th scope="col">Add Credits</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <th scope="row">@(++i)</th>
                        <td>@user.UserName</td>
                        <td>@user.PhoneNumber</td>
                        <td>@user.TransactionsRecievedCount</td>
                        <td>@user.TransactionsSentCount</td>
                        <td>@user.CreditBalance</td>
                        <td>
                            <form class="action" asp-area="Admin" asp-controller="Transfers" asp-action="AddCredits" method="post">
                                <input type="number" name="Ammount" value="0" min="0.01" step="0.01" />
                                <input type="hidden" name="RecieverId" value="@user.Id" />
                                <button type="submit" class="btn btn-link py-0 px-0"><i class="far fa-save"></i></button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</center>
