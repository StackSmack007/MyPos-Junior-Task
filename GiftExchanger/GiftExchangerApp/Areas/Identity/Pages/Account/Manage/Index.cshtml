@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4 class="text-center">@ViewData["Title"]</h4>
<div class="row justify-content-center">
    <div class="col-md-6">
        <partial name="_StatusMessage" model="Model.StatusMessage" />
        <form id="profile-form" method="post">

            <div class="form-group">
                <label asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" class="form-control" disabled />
            </div>

            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <div class="input-group-prepend">
                    <div class="input-group-text">+</div>
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="phone number (GSM)...">
                </div>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Balance"></label>
                <input asp-for="Input.Balance" class="form-control" disabled />
            </div>
            <div class="row justify-content-center">
                <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}